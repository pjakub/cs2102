<h1>Login</h1>


<%= form_for @user_session do |f| %>
    <%= render "shared/error_messages", :target => @user_session %>
    <%= f.label :email %><br />
    <%= f.text_field :email, class:"form-control", placeholder: "Email" %><br />
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control", placeholder: "Password" %><br />
    <%= f.check_box :remember_me %>  <%= f.label :remember_me %><br />
    <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

