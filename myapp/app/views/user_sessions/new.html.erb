<div class="container">

    <div class="modal-header">
      <h1 class="text-center">Login</h1>
    </div>

    <%= form_for @user_session do |f| %>

        <%= render "shared/error_messages", :target => @user_session %>

        <div class="form-group">
          <%= f.text_field :email, class:"form-control input-lg", placeholder: "Email" %><br />
          <%= f.password_field :password, class:"form-control input-lg", placeholder: "Password" %><br />
        </div>
        <div class="form-group">
          <%= f.check_box :remember_me %>  <%= f.label :remember_me %><br />
          <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
        </div>

    <% end %>

</div> <!--/container-->