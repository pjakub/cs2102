<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
        <div id="error_explanation" xmlns="http://www.w3.org/1999/html">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <input type="text" name="title" id="title" placeholder="Enter Title" class="form-control" />
    </p>

    <p>
      <%= f.label :text %><br>
      <textarea type="text" name="comment" id="comment" placeholder="Enter details" rows="3" class="form-control" >
      </textarea>
    </p>

    <p>
      <%= f.label :category %><br>
      <%= select_tag "category", options_for_select(Article::PROPERTY_OPTIONS.keys), class:"form-control" %>
    </p>

    <p>
      <%= f.submit class:"btn btn-default" %>
    </p>

<% end %>




