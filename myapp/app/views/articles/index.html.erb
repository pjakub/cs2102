<h1> Listing Articles </h1>

<%= Article::PROPERTY_OPTIONS.each do |key, value| %>
    <%= link_to key, articles_path(:category => value) %>
<% end %>
<br>
<%= link_to "New Article", new_article_path %>

<table>

  <tr>

    <th> Title </th>
    <th> Text </th>
    <th> Category </th>
    <th> Views </th>

  </tr>
  <br>

  <% @articles.each do |article| %>
    <tr>
      <td> <%= article.comment.title %> </td>
      <td> <%= article.comment.comment %> </td>
      <td> <%= article.category %> </td>
      <td> <%= article.impressionist_count %> </td>
      <td> <%= link_to 'Show', article_path(article)  %> </td>
      <td> <%= link_to 'Edit', edit_article_path(article) %> </td>
      <td> <%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}  %> </td>
    </tr>


  <% end %>
  <%= will_paginate @articles %>

</table>

